.button {
  margin-top: 150rpx;
}

.button>view {
  background: #D7B870;
  border-radius: 8rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  color: #fff;
  border: none;
  text-align: center;
}

.protocal {
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
}

.protocal>text {
  font-family: PingFangSC-Regular;
  font-size: 22rpx;
  color: #8D8D8D;
  letter-spacing: 0;
  line-height: 32rpx;
}

.protocal>view {
  font-family: PingFangSC-Regular;
  font-size: 22rpx;
