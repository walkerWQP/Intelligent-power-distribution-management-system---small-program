  line-height: 32rpx;
}

.back {
  position: fixed;
  width: 100%;
  height: 100%;
  opacity: 0.25;
  background: rgba(0, 0, 0, 0.25);
  top: 0;
  z-index: 1;
}

.modal {
  width: 600rpx;
  height: 752rpx;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  z-index: 2;
  background: #FFFFFF;
  border-radius: 8rpx;
}

.p {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #666666;
  letter-spacing: 0;
  text-align: justify;
  line-height: 40rpx;
  margin-bottom: 40rpx;
  padding: 0 50rpx;
}

.confirm {
  height: 92rpx;
  line-height: 92rpx;
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #FF9B39;
  letter-spacing: 0;
  position: absolute;
  width: 100%;
  bottom: 0;
  border-top: 1rpx solid rgba(151, 151, 151, 0.2);
}

.title {
  font-family: PingFangSC-Semibold;
  font-size: 36rpx;
  line-height: 50rpx;
  height: 50rpx;
  color: #333333;
  letter-spacing: 0;
  margin-top: 40rpm;
  margin: 40rpx 0 28rpx;
}
